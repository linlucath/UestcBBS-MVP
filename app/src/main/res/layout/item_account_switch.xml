<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/item_account_switch_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RadioButton
            android:id="@+id/item_account_switch_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:clickable="false"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_account_switch_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@id/item_account_switch_radiobtn"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            app:shapeAppearanceOverlay="@style/roundedImageStyle"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_account_switch_avatar"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/item_account_switch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/item_account_switch_account_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@id/item_account_switch_name"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
